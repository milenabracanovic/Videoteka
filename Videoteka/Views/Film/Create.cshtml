@model Videoteka.Models.Film

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj novi film</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Film</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
        </div>
    </div>


    
    <div class="form-group">
        @Html.LabelFor(model => model.ZanrId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
           
            @Html.DropDownListFor(model => model.ZanrId, ViewBag.ZanrList as SelectList, "Odaberite zanr", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ZanrId, "", new { @class = "text-danger" })
        </div>
    </div>




    <div class="form-group">
        @Html.LabelFor(m => m.DatumUnosa, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.DatumUnosa, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control", type = "datetime-local" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.DatumIzdanja, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.DatumIzdanja, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BrojNaStanju, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrojNaStanju, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BrojNaStanju, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BrojDostupnih, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrojDostupnih, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BrojDostupnih, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Nazad", "Index")
</div>
