@model Videoteka.Models.Kupac

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj novog kupca</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kupac</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PrimaObavjestenja, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.PrimaObavjestenja)
                    @Html.ValidationMessageFor(model => model.PrimaObavjestenja, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DatumRodjenja, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.DatumRodjenja, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control", type = "datetime-local" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipClanstvaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipClanstvaId, ViewBag.TipClanstvaList as SelectList, "Odaberite Tip Clanstva", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipClanstvaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipKupcaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipKupcaId, ViewBag.TipKupcaList as SelectList, "Odaberite Tip Kupca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipKupcaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<br>

<div>
    @Html.ActionLink("Nazad", "Index")
</div>

